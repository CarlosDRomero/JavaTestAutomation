<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Sauce Suite" verbose="1">
    <parameter name="URL"  value="https://www.saucedemo.com/"/>
    <parameter name="userName"  value="standard_user"/>
    <parameter name="password" value="secret_sauce"/>

    <test name="Sauce Tests">
        <classes>
            <class name="test.automation.tests.SauceTests">
                <methods>
                    <include name="buyFlow">
                        <parameter name="firstName"  value="Jose"/>
                        <parameter name="lastName" value="Escamilla"/>
                        <parameter name="postalCode" value="12345"/>
                    </include>
                    <include name="removeFromShoppingCart"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>